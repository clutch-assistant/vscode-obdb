{
  "name": "obdb-tooling",
  "displayName": "OBDb tooling",
  "description": "OBDb signal editing tooling.",
  "publisher": "clutchengineering",
  "version": "0.1.49",
  "icon": "resources/obdb-icon-square.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/OBDb/vscode-obdb.git"
  },
  "engines": {
    "vscode": "^1.60.0",
    "node": ">=22.0.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:json",
    "onLanguage:yaml",
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "bin": {
    "obdb": "./dist/cli.js"
  },
  "scripts": {
    "vscode:prepublish": "npm run package && npm run compile:mcp",
    "compile": "webpack",
    "compile:cli": "tsc -p tsconfig.cli.json",
    "compile:mcp": "tsc -p tsconfig.mcp.json",
    "compile:test": "tsc -p tsconfig.test.json",
    "compile:all": "npm run compile && npm run compile:cli && npm run compile:mcp",
    "test": "npm run compile:test && node dist/utils/debugFilterCalculator.test.js",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "pretest": "npm run compile"
  },
  "contributes": {
    "capabilities": {
      "hoverProvider": "true",
      "decorationProvider": "true"
    },
    "mcpServerDefinitionProviders": [
      {
        "id": "obdb-signalsets-provider",
        "label": "OBDb Signalsets MCP Server"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "obdb",
          "title": "OBDb",
          "icon": "resources/obdb-icon.svg"
        }
      ]
    },
    "views": {
      "obdb": [
        {
          "type": "webview",
          "id": "obdb.workbench",
          "name": "Workbench"
        }
      ]
    },
    "commands": [
      {
        "command": "obdb.runTest",
        "title": "Run Test",
        "category": "OBDb"
      },
      {
        "command": "obdb.debugTest",
        "title": "Debug Test",
        "category": "OBDb"
      },
      {
        "command": "obdb.optimizeAllDebugFilters",
        "title": "Optimize All Debug Filters",
        "category": "OBDb"
      }
    ],
    "keybindings": [],
    "languages": [
      {
        "id": "json",
        "extensions": [
          ".json"
        ]
      },
      {
        "id": "yaml",
        "extensions": [
          ".yaml",
          ".yml"
        ]
      }
    ],
    "jsonValidation": [
      {
        "fileMatch": [
          "signalsets/v3/*.json"
        ],
        "url": "https://raw.githubusercontent.com/OBDb/.schemas/refs/heads/main/signals.json"
      }
    ]
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^18.x",
    "@types/vscode": "^1.60.0",
    "ts-loader": "^9.5.2",
    "typescript": "^5.3.0",
    "webpack": "^5.99.7",
    "webpack-cli": "^6.0.1"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "@types/fast-levenshtein": "^0.0.4",
    "canvas": "^3.1.0",
    "dictionary-en": "^4.0.0",
    "fast-levenshtein": "^3.0.0",
    "js-yaml": "^4.1.0",
    "jsonc-parser": "^3.2.0",
    "nspell": "^2.1.5",
    "yaml": "^2.3.4"
  }
}
